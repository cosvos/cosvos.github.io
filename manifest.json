{
    "manifest_version": 2,
    "name": "FM Music Player",
    "description": "豆瓣FM Music Player",
    "version": "0.1",
    "permissions": ["notifications", "cookies", "http://*.douban.fm/*", "https://*.douban.fm/*", "http://*.douban.com/*", "https://*.douban.com/*"],
    "background": {
        "scripts": ["scripts/app.js"]
    },
    "icons": {
        "128": "images/favicon.ico"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",
    "chrome_url_overrides": {
        "newtab": "index.html"
    }
}
